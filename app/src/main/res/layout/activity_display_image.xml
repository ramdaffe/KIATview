<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.tnp2k.kiatview.displayImageActivity"
    android:padding="0dp">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/metadataPhoto"
        android:textStyle="bold"
        android:textSize="24dp"
        android:background="#ff00227b"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:height="36dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/displayPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/metadataPhoto" />

</RelativeLayout>
